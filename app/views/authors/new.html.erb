<h3>Add New Author</h3>

<%form for @authors do |f|%>
	<div class="form-group">
		<%=f.label :first_name%><br/>
		<%=f.textfield :first_name, class: "form-control"%><br/>
	</div>
	div class="form-group">
		<%=f.label :last_name%><br/>
		<%=f.textfield :last_name, class: "form-control"%><br/>
	</div>

	<%=f.submit 'Submit', class: "btn btn-primary"%>
	<%= link_to 'Cancel', authors_path, class: "btn btn-default"%>
<%end%>
