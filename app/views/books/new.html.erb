<h2>Add a new Book</h2>

<%= form_for @book do |f|%>
	<div class="form-group">
		<%=f.label :title%><br/>
		<%=f.textfield :title, class: "form-control"%><br/>
	</div>
	<div class="form-group">
		<%=f.label :isbn%><br/>
		<%=f.textfield :isbn, class: "form-control"%><br/>
	</div>
	<div class="form-group">
		<%=f.label :category%><br/>
		<%=f.select :category_id, Category.all.collect {|x|[x.name,x.id]}, {:include_blank => "Select one"},class: "form-control"%><br/><br/>
	</div>
		<div class="form-group">
		<%=f.label :author%><br/>
		<%=f.select :authir_id, Author.all.collect {|x|[x.name,x.id]}, {:include_blank => "Select one"},class: "form-control"%><br/><br/>
	</div>
		<div class="form-group">
		<%=f.label :publisher%><br/>
		<%=f.select :publisher_id, Publisher.all.collect {|x|[x.name,x.id]}, {:include_blank => "Select one"},class: "form-control"%><br/><br/>
	</div>
	<div class="form-group">
		<%=f.label :format%><br/>
		<%=f.textfield :format, class: "form-control"%><br/>
	</div>
	<div class="form-group">
		<%=f.label :excerpt%><br/>
		<%=f.textarea :excerpt, class: "form-control"%><br/>
	</div>
	<div class="form-group">
		<%=f.label :pages%><br/>
		<%=f.number_field :pages, class: "form-control"%><br/>
	</div>
	<div class="form-group">
		<%=f.label :price%><br/>
		<%=f.textfield :price, class: "form-control"%><br/>
	</div>
	<div class="form-group">
		<%=f.label :buy%><br/>
		<%=f.textfield :buy, class: "form-control"%><br/>
	</div>

	<%=f.submit 'Submit', class: "btn btn-primary"%>
	<%= link_to 'Cancel', books_path, class: "btn btn-default"%>
<%end%>




































